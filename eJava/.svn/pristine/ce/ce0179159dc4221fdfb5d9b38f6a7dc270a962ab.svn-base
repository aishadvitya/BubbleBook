root { 
    display: block;
}

.no-border{
    border: 0px none transparent;
}

.no-overflow{
    overflow: hidden;    
}

.leftPane{
    width: 15%;height:auto;
    text-align: center;
}
.rightPane{
    width: 60%;
    height:100%;
    text-align: left;
}
.centerPane{
